# Neo C++ Node Configuration

[ApplicationEngine]
# Gas price for transactions
GasPrice = 1000

# Network fee per byte
NetworkFeePerByte = 1000

# Storage price for contract storage
StoragePrice = 100000

# Default gas for script execution
DefaultGas = 20000000

# Platform version
PlatformVersion = 3

# Fixed random value for testing (comment out for production)
# FixedRandom = 12345

# Execution cache size
ExecutionCacheSize = 100

[Logging]
# Log level (Debug, Info, Warning, Error, Fatal)
LogLevel = Info

# Log to console
LogToConsole = true

# Log to file
LogToFile = true

# Log file path
LogFilePath = neo.log

[Network]
# P2P port
P2PPort = 10333

# RPC port
RPCPort = 10332

# Maximum number of connections
MaxConnections = 10

# Seed nodes
SeedNodes = seed1.neo.org:10333,seed2.neo.org:10333,seed3.neo.org:10333,seed4.neo.org:10333,seed5.neo.org:10333

[Consensus]
# Enable consensus
EnableConsensus = false

# Consensus nodes
ConsensusNodes = 

[RPC]
# Enable RPC server
EnableRPC = true

# RPC bind address
RPCBindAddress = 127.0.0.1

# RPC port
RPCPort = 10332

# Enable CORS
EnableCORS = true

# CORS allowed origins
CORSAllowedOrigins = *

[Plugins]
# Enable statistics plugin
EnableStatisticsPlugin = true

# Enable RPC server plugin
EnableRPCServerPlugin = true

# Enable import blocks plugin
EnableImportBlocksPlugin = false

# Enable simple policy plugin
EnableSimplePolicyPlugin = true
